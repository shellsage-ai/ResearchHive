<Window x:Class="ResearchHive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ResearchHive.ViewModels"
        xmlns:views="clr-namespace:ResearchHive.Views"
        xmlns:conv="clr-namespace:ResearchHive.Converters"
        Title="ResearchHive â€” Agentic Research Studio" 
        Height="800" Width="1400"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.InputBindings>
        <!-- Ctrl+N: New session (via sidebar) -->
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding Sidebar.StartCreateSessionCommand}"/>
        <!-- Ctrl+H: Go home -->
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding ShowHomeCommand}"/>
        <!-- Ctrl+Comma: Open settings -->
        <KeyBinding Key="OemComma" Modifiers="Ctrl" Command="{Binding ShowSettingsCommand}"/>
        <!-- Escape: Go home -->
        <KeyBinding Key="Escape" Command="{Binding ShowHomeCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolVis"/>
        <conv:NullToVisibilityConverter x:Key="NullVis"/>
        <conv:EqualityToVisibilityConverter x:Key="EqVis"/>

        <DataTemplate DataType="{x:Type vm:WelcomeViewModel}">
            <views:WelcomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SessionWorkspaceViewModel}">
            <views:SessionWorkspaceView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="200" MaxWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- App Title -->
            <StackPanel Grid.Row="0" Margin="16,16,16,8">
                <TextBlock Text="ResearchHive" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Agentic Research Studio" FontSize="11" Foreground="{StaticResource SidebarTextBrush}" Opacity="0.7" Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Sessions Sidebar -->
            <views:SessionsSidebarView Grid.Row="1" DataContext="{Binding Sidebar}"/>

            <!-- Bottom Bar -->
            <StackPanel Grid.Row="2" Margin="16,8">
                <Button Content="ðŸ  Home" Style="{StaticResource SubtleButton}" 
                        Foreground="{StaticResource SidebarTextBrush}"
                        Command="{Binding ShowHomeCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,4"/>
                <Button Content="âš™ Settings" Style="{StaticResource SubtleButton}" 
                        Foreground="{StaticResource SidebarTextBrush}"
                        Command="{Binding ShowSettingsCommand}" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="2" Background="{StaticResource BorderBrush}" 
                       HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

        <!-- Main Content Area -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Ollama Offline Warning Banner -->
            <Border Grid.Row="0" Background="#FFF3E0" BorderBrush="{StaticResource WarningBrush}" 
                    BorderThickness="0,0,0,1" Padding="12,6"
                    Visibility="{Binding IsOllamaConnected, Converter={StaticResource BoolVis}, ConverterParameter=Invert}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš " FontSize="14" Foreground="{StaticResource WarningBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding OllamaStatus}" FontSize="12" 
                               Foreground="#E65100" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content View -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="0"/>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,1,0,0" Padding="12,4">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <!-- Ollama status dot -->
                        <Ellipse Width="8" Height="8" Margin="0,0,6,0" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOllamaConnected}" Value="True">
                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding StatusText}" FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ProgressBar Style="{StaticResource BusyIndicator}" 
                                 Visibility="{Binding IsBusy, Converter={StaticResource BoolVis}}"
                                 HorizontalAlignment="Right" Width="120"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
