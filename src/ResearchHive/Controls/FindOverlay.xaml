<UserControl x:Class="ResearchHive.Controls.FindOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Visibility="Collapsed"
             HorizontalAlignment="Right" VerticalAlignment="Top"
             Margin="0,8,24,0">
    <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
            CornerRadius="6" Padding="8,6">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
        </Border.Effect>
        <StackPanel Orientation="Horizontal">
            <!-- Search icon -->
            <TextBlock Text="ðŸ”" FontSize="13" VerticalAlignment="Center" Margin="0,0,6,0" Opacity="0.5"/>

            <!-- Search TextBox -->
            <TextBox x:Name="SearchBox" Width="220" FontSize="13" Padding="4,3"
                     BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged"
                     PreviewKeyDown="SearchBox_KeyDown"/>

            <!-- Match counter -->
            <TextBlock x:Name="MatchCounter" Text="0/0" FontSize="11" VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,4,0" MinWidth="30"/>

            <!-- Previous match -->
            <Button x:Name="PrevButton" Content="â–²" FontSize="10" Padding="6,2"
                    ToolTip="Previous match (Shift+Enter)"
                    Style="{StaticResource SubtleButton}" Click="PrevButton_Click"/>

            <!-- Next match -->
            <Button x:Name="NextButton" Content="â–¼" FontSize="10" Padding="6,2"
                    ToolTip="Next match (Enter)"
                    Style="{StaticResource SubtleButton}" Click="NextButton_Click" Margin="2,0"/>

            <!-- Close -->
            <Button x:Name="CloseButton" Content="âœ•" FontSize="11" Padding="6,2"
                    ToolTip="Close (Escape)"
                    Style="{StaticResource SubtleButton}" Click="CloseButton_Click" Margin="4,0,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
